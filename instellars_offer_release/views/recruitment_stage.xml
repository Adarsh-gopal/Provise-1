<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="hr_recruitment_stage_form_offer" model="ir.ui.view">
        <field name="name">hr.recruitment.stage.form.offer</field>
        <field name="model">hr.recruitment.stage</field>
        <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
        <field name="arch" type="xml">
            <field name="fold" position="after">
                <field name="enable_offer_letter_button"/>
                <field name="enable_update_result_button"/>
                 <field name="enable_appointment_letter"/>
            </field>
        </field>
    </record>
    <record id="hr_recruitment_stage_tree_offer" model="ir.ui.view">
        <field name="name">hr.recruitment.stage.tree.offer</field>
        <field name="model">hr.recruitment.stage</field>
        <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_tree"/>
        <field name="arch" type="xml">
            <field name="fold" position="after">
                <field name="enable_offer_letter_button"/>
                <field name="enable_update_result_button"/>
                 <field name="enable_appointment_letter"/>
            </field>
        </field>
    </record>
</odoo>