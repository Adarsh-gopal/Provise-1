<?xml version="1.0"?>
<odoo>
    <!--demand form over all -->
    <record id="demand_view_form" model="ir.ui.view">
        <field name="name">demands.management.form</field>
        <field name="model">demands</field>
        <field name="arch" type="xml">
            <form class="o_lead_opportunity_form">
                <header>
                    <button string="New Quotation" name="action_sale_quotations_new" type="object" class="oe_highlight"
                        attrs="{'invisible': ['|', ('type', '=', 'demand'), ('active', '=', False)]}"/>
                    <button name="action_set_won" string="Mark Won" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('active','=',False), ('type', '=', 'demand')]}"/>
                    <button name="%(instellars_demand_management.action_crm_demand2opportunity_partner)d" string="Convert to Opportunity" type="action" help="Convert to Opportunity"
                            class="oe_highlight" attrs="{'invisible': ['|', ('type', '=', 'opportunity'), ('active', '=', False)]}"/>
                    <button name="toggle_active" string="Restore" type="object"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <button name="action_set_lost" string="Mark as Lost" type="object"
                            attrs="{'invisible': ['|', ('type', '=', 'opportunity'), ('active', '=', False)]}"/>
                    <field name="stage_id" widget="statusbar"
                        options="{'clickable': '1', 'fold_field': 'fold'}"
                        attrs="{'invisible': ['|', ('active', '=', False), ('type', '=', 'demand')]}"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                        name="action_view_sale_quotation" icon="fa-pencil-square-o" attrs="{'invisible': [('type', '=', 'demand')]}">
                        <field name="quotation_count" widget="statinfo" string="Quotations"/>
                        </button>
                        <button class="oe_stat_button" type="object" attrs="{'invisible': ['|', ('sale_order_count', '=', 0), ('type', '=', 'demand')]}"
                            name="action_view_sale_order" icon="fa-usd">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="sale_amount_total" widget="monetary" options="{'currency_field': 'company_currency'}"/></span>
                                <span class="o_stat_text"> Orders</span>
                                <field name="sale_order_count" invisible="1"/>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Lost" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <widget name="web_ribbon" text="Won" attrs="{'invisible': [('is_won', '!=', True)]}" />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Demand" attrs="{'invisible': [('type', '=', 'opportunity')]}"/>
                        <label for="name" class="oe_edit_only" attrs="{'invisible': [('type', '=', 'demand')]}"/>
                        <h1><field name="name" placeholder="e.g. Product Pricing"/></h1>
                         <field name="company_currency" invisible="1"/>
                    </div>
                    <group>
                        <group attrs="{'invisible': [('type', '=', 'opportunity')]}">
                            <!-- Preload all the partner's information -->
                            <field name="partner_id" widget="res_partner_many2one"
                                context="{'default_name': contact_name,
                                    'default_street': street,
                                    'default_city': city,
                                    'default_state_id': state_id,
                                    'default_zip': zip,
                                    'default_country_id': country_id,
                                    'default_phone': phone,
                                    'default_mobile': mobile,
                                    'default_email': email_from,
                                    'default_user_id': user_id,
                                    'default_website': website,
                                    'show_vat': True
                                }" groups="base.group_no_one"/>
                            <field name="partner_name"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>
                            <field name="website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                            <field name="lang_id"/>
                            <field name="is_won" invisible="1"/>
                        </group>

                        <group attrs="{'invisible': [('type', '=', 'demand')]}">
                            <field name="partner_id"
                                widget="res_partner_many2one"
                                string="Customer"
                                context="{'res_partner_search_mode': type == 'opportunity' and 'customer' or False,
                                    'default_name': contact_name or partner_name,
                                    'default_street': street,
                                    'default_is_company': type == 'opportunity' and contact_name == False,
                                    'default_company_name': type == 'opportunity' and partner_name,
                                    'default_street2': street2,
                                    'default_city': city,
                             
                                    'default_state_id': state_id,
                                    'default_zip': zip,
                                    'default_country_id': country_id,
                                    'default_phone': phone,
                                    'default_mobile': mobile,
                                    'default_email': email_from,
                                    'default_user_id': user_id,
                                   
                                    'default_website': website,
                                    'show_vat': True,
                                }"
                            />

                           
                            <field name="email_from" string="Email" widget="email"/>
                            <field name="phone" widget="phone" options="{'enable_sms': True}"/>
                        </group>
                        <group attrs="{'invisible': [('type', '=', 'opportunity')]}">
                            <label for="contact_name"/>
                            <div class="o_row">
                                <field name="contact_name"/>
                               
                            </div>
                           
                          
                            <field name="email_from" widget="email"/>
                          
                            <field name="phone" widget="phone" options="{'enable_sms': True}"/>
                            <field name="mobile" widget="phone" options="{'enable_sms': True}"/>
                            <field name="company_id" groups="base.group_multi_company" optional="show"/>
                        </group>
                        <group attrs="{'invisible': [('type', '=', 'demand')]}">
                            <field name="priority" widget="priority"/>          
                        </group>
                        <group>
                            <field name="date_conversion" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="user_id" />
                            <field name="type" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Internal Notes">
                            <field name="description" placeholder="Add a description..."/>
                        </page>
                        <page name="demand" string="Demand">
                            <group name="demand_group">
                                <group>
                                   
                                    <field name="project_id"/>
                                     <field name="product_id" options="{'no_create_edit': True, 'no_create': True}"/>     
                                    <field name="certification_type"/>
                                    <field name="certification"  widget="many2many_tags" domain="[('skill_type_id','=',certification_type)]"/>
                                    <field name="domain"/>
                                    <!-- <field name="years_of_exp_min"/>
                                    <field name="years_of_exp_max"  attrs="{'required': [('years_of_exp_min','!=', False)]}"/> -->
                                    <label for="years_of_exp_min" string="Experience Min-Max"/>
                                    <div class="o_row">
                                        <field name="years_of_exp_min" nolabel="1"/>
                                        <span>Years-</span>
                                        <field name="years_of_exp_max" attrs="{'required': [('years_of_exp_min','!=', False)]}" nolabel="1"/>
                                        <span>Years</span>
                                    </div>                    
                                    <field name="delivery_site"/>
                                    <field name="is_employee_assigned" invisible="1"/>
                                    <field name="exp_min_val_float" invisible="1"/>
                                    <field name="exp_max_val_float" invisible="1"/>
                                    <field name="demand_closed_date"/>
                                    <field name="employee_assigned" options="{'no_create': True, 'no_create_edit':True}" domain="[('employee_status.id', '=', 1),('domain','=',domain),('domain.id','!=',None),('employee_skill_ids.skill_type_id','=',certification_type),('employee_skill_ids.skill_type_id','!=',None),('employee_skill_ids.skill_id','in',certification),('employee_skill_ids.skill_id','!=',None),('relevant_yrs_of_exp_till_date','&gt;=',exp_min_val_float),('relevant_yrs_of_exp_till_date','&lt;=',exp_max_val_float),('relevant_yrs_of_exp_till_date','!=',None)]"/>
                                    <field name="employee_assigned_date"/>
                                    <field name="demand_status"/>
                                    <field name="job_description"/>
                                </group>
                                 <group name="matched demands">
                                    <!-- <field name="match_count"/> -->
                                     <button class="oe_stat_button" name="get_employee_list"  type="object"  icon="fa-users">
                                        <field string="Matched Employees" name="match_count" widget="statinfo" />
                                       
                                    </button>
                                  <!--   <div>
                                        <field name="demand_matched_ids" widget="many2many_tags"/>
                                    </div> -->
                                </group>
                            </group>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

<!-- type = demand -->
    <record id="demand_case_tree_view_demand" model="ir.ui.view">
            <field name="name">demands.tree.demand</field>
            <field name="model">demands</field>
            <field name="arch" type="xml">
                <tree string="Demands" decoration-bf="message_needaction==True">
                    <field name="create_date" optional="hide"/>
                    <field name="name" string="Demand"/>
                    <field name="contact_name" optional="show"/>
                    <field name="partner_name" optional="hide"/>
                    <field name="demand_status" optional="show"/>
                    <field name="employee_assigned" optional="show"/>
                    <field name="years_of_exp_min" string="Minimum Exp" optional="show"/>
                    <field name="years_of_exp_max" string="Maximum Exp"  optional="show"/>
                    <field name="certification_type" optional="show"/>
                    <field name="certification" widget="many2many_tags" optional="show"/>
                    <field name="user_id" optional="show"/>
                    <field name="email_from" optional="show"/>
                    <field name="phone" optional="show"/>
                    <field name="city" optional="show"/>
                    <field name="state_id" optional="hide"/>
                    <field name="country_id" optional="show"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                    <field name="active" invisible="1"/>
                    <field name="message_needaction" invisible="1"/>
                    <field name="priority" optional="hide"/>
                </tree>
            </field>
        </record>
        <record id="view_damand_kanban" model="ir.ui.view">
            <field name="name">demand.kanban</field>
            <field name="model">demands</field>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" archivable="false">
                    <field name="name"/>
                    <field name="contact_name"/>
                    <field name="user_id"/>
                    <field name="priority"/>
                    <field name="activity_ids"/>
                    <field name="message_needaction_counter"/>
                    <field name="activity_state"/>
                    <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                                </div>
                                <div>
                                    <span class="o_kanban_record_subtitle"><field name="contact_name"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <t t-if="record.message_needaction_counter.raw_value">
                                            <span role="alert" class="oe_kanban_mail_new" title="Unread Messages"><i class="fa fa-comments" aria-label="Messages" role="img"/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                        </t>
                                        <div class="o_kanban_inline_block">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" class="oe_kanban_avatar float-right"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record  id="demand_management_calendar_view_demand" model="ir.ui.view">
            <field name="name">demands.calendar.demand</field>
            <field name="model">demands</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <calendar string="Demand Generation" mode="month" date_start="activity_date_deadline" color="user_id" hide_time="true" event_limit="5">
                    <field name="partner_id" avatar_field="image_128"/>
                </calendar>
            </field>
        </record>

        <record id="demand_management_view_activity" model="ir.ui.view">
            <field name="name">demand.management.view.activity</field>
            <field name="model">demands</field>
            <field name="arch" type="xml">
                <activity string="Demands">
                    <field name="user_id"/>
                    <field name="company_currency"/>
                    <templates>
                        <div t-name="activity-box">
                            <img t-att-src="activity_image('res.users', 'image_128', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value"/>
                            <div>
                                <field name="name" display="full"/>
                            </div>
                        </div>
                    </templates>
                </activity>
            </field>
        </record>

        <record id="demand_management_case_kanban_view_demands" model="ir.ui.view">
            <field name="name">demeands.management.kanban.demand</field>
            <field name="model">demands</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column o_opportunity_kanban"  archivable="false">
                    <field name="stage_id" options='{"group_by_tooltip": {"requirements": "Description"}}'/>
                    <field name="color"/>
                    <field name="priority"/>
                    <field name="kanban_state"/>
                    <field name="activity_date_deadline"/>
                    <field name="user_email"/>
                    <field name="user_id"/>
                    <field name="message_needaction_counter"/>
                    <field name="partner_id"/>
                    <field name="company_currency"/>
                    <field name="activity_summary"/>
                    <field name="active"/>
                    <field name="activity_state" />
                    <field name="activity_ids" />
                    <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">

                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div>
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <div>
                                        <span attrs="{'invisible': [('demand_status','=', 'close')]}"  style="color:white;background-color:green;float:right;padding: 0 5px 0 5px;border-radius: 50px 50px;font-size: 10px;font-weight: 900;">
                                            <field name="demand_status"/>
                                        </span>
                                        <span attrs="{'invisible': [('demand_status','=', 'open')]}" style="color:white;background-color:red;float:right;padding: 0 5px 0 5px;border-radius: 50px 50px;font-size: 10px;font-weight: 900;">
                                            <field name="demand_status"/>
                                        </span>
                                    </div>
                                    <div style="padding:5px;"/>
                                 
                                    <div>
                                        <field name="partner_id"/>
                                    </div>
                                    <div style="color:green;font-weight:600">
                                        <field name="employee_assigned"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority" groups="base.group_user"/>
                                            <t t-if="record.message_needaction_counter.raw_value">
                                                <span role="alert" class='oe_kanban_mail_new' title='Unread Messages'><i class='fa fa-comments' aria-label="Unread messages" role="img"/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                            </t>
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" class="oe_kanban_avatar"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_clear"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_demands_management_filter" model="ir.ui.view">
            <field name="name">demand.management.search.demand</field>
            <field name="model">demands</field>
            <field name="arch" type="xml">
                <search string="Search Leads">
                    <field name="name" string="Demand" filter_domain="['|','|','|',('partner_name', 'ilike', self),('email_from', 'ilike', self), ('contact_name', 'ilike', self), ('name', 'ilike', self)]"/>

                    <field name="user_id"/>

                    <field name="country_id"/>
                    <field name="city"/>
                    <field name="lang_id"/>
                    <field name="create_date"/>
                    <separator />
                    <filter string="My Demands"
                            name="assigned_to_me"
                            domain="[('user_id', '=', uid)]"
                            help="Demands that are assigned to me"/>
                    <filter string="Unassigned" name="unassigned_Demands"
                            domain="[('user_id','=', False), ('type', '=', 'demand')]"
                            help="Demands that are not assigned"/>
                    
                    <separator/>
                    <filter string="Creation Date" name="creation_date" date="create_date"/>
                    <separator/>
                    <separator/>
                    <filter invisible="1" string="Late Activities" name="activities_overdue"
                            domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                            help="Show all opportunities for which the next action date is before today"/>
                    <filter invisible="1" string="Today Activities" name="activities_today"
                            domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter invisible="1" string="Future Activities" name="activities_upcoming_all"
                            domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter name="city" string="City" context="{'group_by': 'city'}"/>
                        <filter string="Country" name="country" context="{'group_by':'country_id'}" />
                        <filter string="Company" name="company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                        <separator orientation="vertical" />
                        <filter string="Creation Date" context="{'group_by':'create_date:month'}" name="month"/>
                       
                    </group>
                </search>
            </field>
        </record>


        <!--
            Demand(as Opportunity) views
        -->

        <record id="demand_management_case_tree_view_oppor" model="ir.ui.view">
            <field name="name">demands.oppertunity.tree.opportunity</field>
            <field name="model">demands</field>
            <field name="arch" type="xml">
                <tree string="Demand Opportunities" decoration-bf="message_needaction==True"  decoration-danger="activity_date_deadline and (activity_date_deadline &lt; current_date)">
                    <field name="demand_closed_date" invisible="1"/>
                    <field name="create_date" optional="show"/>
                    <field name="name" string="Opportunity"/>
                    <field name="years_of_exp_min" string="Minimum Exp" optional="show"/>
                    <field name="years_of_exp_max" string="Maximum Exp"  optional="show"/>
                    <field name="certification_type" optional="show"/>
                    <field name="certification" widget="many2many_tags" optional="show"/>

                    <field name="partner_id" string="Customer" optional="show"/>
                    <field name="demand_status" />
                    <field name="employee_assigned"/>

                    <field name="email_from" optional="hide"/>
                    <field name="phone" optional="hide"/>
                    <field name="city" optional="hide"/>
                    <field name="state_id" optional="hide"/>
                    <field name="country_id" optional="show"/>
                    <field name="activity_date_deadline" optional="show"/>
                    <field name="activity_summary" optional="show" readonly="1"/>
                   
                    <field name="stage_id" required="1" optional="show"/>
                   
                    <field name="user_id" optional="hide"/>
                   
                    <field name="message_needaction" invisible="1"/>
                    <field name="write_date" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show" />
                    <field name="priority" optional="hide"/>
                    <field name="activity_exception_decoration" widget="activity_exception"/>
                </tree>
            </field>
        </record>

        <record id="demand_oppr_view_graph" model="ir.ui.view">
            <field name="name">demands.oppertunity.view.graph</field>
            <field name="model">demands</field>
            <field name="arch" type="xml">
                <graph string="Demand Opportunities">
                    <field name="stage_id" type="col"/>
                    <field name="user_id" type="row"/>
                </graph>
            </field>
        </record>

        <record id="demand_oppr_view_pivot" model="ir.ui.view">
            <field name="name">demands.oppertunity.view.pivot</field>
            <field name="model">demands</field>
            <field name="arch" type="xml">
                <pivot string="Demand Pipeline Analysis">
                    <field name="create_date" interval="month" type="row"/>
                    <field name="stage_id" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="demand_oppr_view_tree_activity" model="ir.ui.view">
            <field name="name">demands.tree.opportunity.next.activity</field>
            <field name="model">demands</field>
            <field name="arch" type="xml">
                <tree string="Next Activities" decoration-danger="activity_date_deadline and (activity_date_deadline &lt; current_date)">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="activity_date_deadline"/>
                    <field name="activity_type_id"/>
                    <field name="activity_summary"/>
                    <field name="stage_id" required="1"/>
                    <field name="demand_closed_date"/>
                </tree>
            </field>
        </record>

        <record id="view_demand_case_opportunities_filter" model="ir.ui.view">
            <field name="name">demands.search.opportunity</field>
            <field name="model">demands</field>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <search string="Search Opportunities">
                    <field name="name" string="Demand Opportunity" filter_domain="[
                        '|', '|', '|', '|',
                        ('partner_id', 'ilike', self),
                        ('partner_name', 'ilike', self),
                        ('email_from', 'ilike', self),
                        ('name', 'ilike', self),
                        ('contact_name', 'ilike', self)]"/>
                    <field name="partner_id" operator="child_of" string="Customer" filter_domain="[
                        '|', '|', '|',
                        ('partner_id', 'ilike', self),
                        ('partner_name', 'ilike', self),
                        ('email_from', 'ilike', self),
                        ('contact_name', 'ilike', self)]"/>
                  
                    <field name="user_id"/>
                 
                    <field name="stage_id" domain="[]"/>
                    <field name="country_id"/>
                    <field name="city"/>
                    <separator/>
                    <filter string="My Pipeline" name="assigned_to_me"
                        domain="[('user_id', '=', uid)]"
                        help="Opportunities that are assigned to me"/>
                    <filter string="Unassigned" name="unassigned"
                        domain="[('employee_assigned', '=', False)]" help="No Employee"/>
                
                    <separator/>
                    <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction', '=', True)]"/>
                    <separator/>
                    <filter string="Creation Date" name="creation_date" date="create_date"/>
        
                    <separator/>
                    <filter string="Won" name="won" domain="['&amp;', ('active', '=', True), ('stage_id.is_won', '=', True)]"/>
                    <filter string="Lost" name="lost" domain="['&amp;', ('active', '=', False)]"/>
                    <separator/>
                    <filter invisible="1" string="Late Activities" name="activities_overdue"
                        domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                        help="Show all opportunities for which the next action date is before today"/>
                    <filter invisible="1" string="Today Activities" name="activities_today"
                        domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter invisible="1" string="Future Activities" name="activities_upcoming_all"
                        domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By" colspan="16">
                        <filter name="stage" string="Stage" context="{'group_by':'stage_id'}"/>
                        <filter name="city" string="City" context="{'group_by': 'city'}"/>
                        <filter string="Country" name="country" context="{'group_by':'country_id'}" />
                        <separator orientation="vertical" />
                        <filter string="Creation Date" context="{'group_by':'create_date:month'}" name="month"/>
                    </group>
                </search>
            </field>
        </record>


